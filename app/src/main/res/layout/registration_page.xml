<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="Register Form\nPlease fill in the fields below"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:padding="10sp"/>

    <EditText
        android:id="@+id/full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Name and Surname"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:layout_marginHorizontal="15sp"
        android:layout_marginTop="10sp"
        android:maxLength="20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:text="Please Select Your Sex:"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:fontFamily="sans-serif-thin"
        android:padding="10sp"
        android:layout_marginTop="10sp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/male_radio"
            android:text="Male"
            android:textSize="18sp"
            android:layout_marginLeft="15sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female_radio"
            android:text="Female"
            android:textSize="18sp"
            android:layout_marginLeft="120sp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10sp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bd"
            android:text="Please Select The Year \nYou Were Born:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-thin"
            android:layout_marginLeft="15sp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50sp"
            android:padding="15sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter The Username You Want"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:layout_marginHorizontal="15sp"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:layout_marginHorizontal="15sp"
        android:layout_marginVertical="20sp"/>

    <EditText
        android:id="@+id/re_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Re-enter your Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:layout_marginHorizontal="15sp"
        android:layout_marginBottom="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/clear_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5sp"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:paddingHorizontal="30sp"
            android:layout_marginLeft="80sp"/>

        <Button
            android:id="@+id/register_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5sp"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:paddingHorizontal="30sp"
            android:layout_marginLeft="10sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/return_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5sp"
        android:backgroundTint="@color/dark_blue"
        android:fontFamily="sans-serif"
        android:layout_gravity="center"
        android:paddingHorizontal="30sp" />

</LinearLayout>